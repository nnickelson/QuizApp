<Page x:Class="QuizApp.StudyMyDeck"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QuizApp"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="700"
      Title="StudyMyDeck">

    <Grid Background="WhiteSmoke">
        <Label x:Name="Cardlabel" Content="Card" HorizontalAlignment="Left" Margin="11,15,0,0" VerticalAlignment="Top"/>
        <Label x:Name="OutOflabel" Content="out of" HorizontalAlignment="Left" Margin="123,15,0,0" VerticalAlignment="Top" Height="25"/>
        <TextBox IsReadOnly ="true" x:Name="CurrentCardBox" HorizontalAlignment="Left" Height="23" Margin="60,18,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="58"/>
        <TextBox IsReadOnly ="true" x:Name="TotalCardsBox" HorizontalAlignment="Left" Height="23" Margin="182,17,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="50"/>
        <Button x:Name="SelectADeckbtn" Content="Select a Deck" HorizontalAlignment="Left" Margin="276,15,0,0" VerticalAlignment="Top" Width="94" Height="25"/>
        <TextBox IsReadOnly ="True" x:Name="DeckTitlebox" HorizontalAlignment="Left" Height="25" Margin="383,16,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="193"/>
        <Rectangle Fill="#FFE8E8EE" HorizontalAlignment="Left" Height="341" Margin="10,76,0,0" Stroke="Black" VerticalAlignment="Top" Width="629" RadiusY="45.382" RadiusX="45.382"/>
        <Button x:Name="Flipbtn" Content="Flip" HorizontalAlignment="Left" Margin="394,459,0,0" VerticalAlignment="Top" Width="75"/>
        <Label x:Name="label" HorizontalAlignment="Left" Margin="276,243,0,0" VerticalAlignment="Top"/>
        <Button x:Name="Nextbtn" Content="Next" HorizontalAlignment="Left" Margin="182,459,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="Previousbtn" Content="Previous" HorizontalAlignment="Left" Margin="90,459,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="button" Content="Finished" HorizontalAlignment="Left" Margin="483,459,0,0" VerticalAlignment="Top" Width="75"/>
        <TextBox x:Name="DefinitionBox" HorizontalAlignment="Left" Height="301" Margin="327,92,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300"/>
        <Image x:Name="OptionalImage" HorizontalAlignment="Left" Height="301" Margin="26,92,0,0" VerticalAlignment="Top" Width="288"/>
        <TextBlock FontSize ="60" TextAlignment ="center" x:Name="TermBlock" HorizontalAlignment="Left" Margin="11,165,0,184" TextWrapping="Wrap" Text="TextBlock"  Width="628">Term</TextBlock>


    </Grid>
</Page>
