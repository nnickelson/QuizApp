<Page x:Class="QuizApp.EditStudyDeck"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QuizApp"
      mc:Ignorable="d" 
      d:DesignHeight="790" d:DesignWidth="400"
      Title="EditStudyDeck" Background="#FFFBF9F9">
    <Grid Background="#FFF3F2F2" Margin="0,-3,0,3">


        <!-- Textboxes-->
        <TextBox  TextBox.Visibility ="Hidden" x:Name="TermtextBox" HorizontalAlignment="Left" Height="23" Margin="31,438,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="350"  BorderThickness="0,0,0,2" Opacity="0.8" AutomationProperties.HelpText="Enter Term here"/>
        <TextBox  TextBox.Visibility ="Hidden" x:Name="DefinitiontextBox" HorizontalAlignment="Left" Height="130" Margin="31,492,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="350" Opacity="0.8" BorderThickness="0,0,0,2" AutomationProperties.HelpText="Enter the definintion here" AutomationProperties.IsRequiredForForm="True" VerticalScrollBarVisibility="Auto"/>
        <TextBox  IsReadOnly ="True" x:Name="currentlyEditing" HorizontalAlignment="Left" Height="20" Width="258"  Margin="123,78,0,0" TextWrapping="Wrap" VerticalAlignment="Top" AutomationProperties.IsRequiredForForm="True" BorderThickness="0,0,0,1"/>
        <TextBox  IsReadOnly ="True" x:Name="TotalCardstextBox" HorizontalAlignment="Left" Height="23" Margin="145,105,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="82" BorderThickness="0,0,0,1"/>

        <!-- Label-->
        <Label  Label.Visibility ="Hidden" x:Name="Termlabel" Content="Term" HorizontalAlignment="Left" Margin="29,454,0,0" VerticalAlignment="Top"/>
        <Label  Label.Visibility ="Hidden" x:Name="Definitionlabel" Content="Definition" HorizontalAlignment="Left" Margin="29,615,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label" Content="Currently editing" HorizontalAlignment="Left" Margin="22,78,0,0" VerticalAlignment="Top"/>

        <!-- Button-->
        <Button x:Name="SelectADeckbtn" Content="Select a deck to edit" HorizontalAlignment="Left" Margin="152,28,0,0" VerticalAlignment="Top" Width="115" Click="SelectADeckbtn_Click"/>
        <Button Button.Visibility="Hidden" x:Name="Deletebtn" Content="Delete" HorizontalAlignment="Left" Margin="31,648,0,0" VerticalAlignment="Top" Width="75" Click="Deletebtn_Click"/>
        <Button Button.Visibility="Hidden" x:Name="Previousbtn" Content="Previous" HorizontalAlignment="Left" Margin="289,648,0,0" VerticalAlignment="Top" Width="75" Click="Previousbtn_Click"/>
        <Button Button.Visibility="Hidden" x:Name="NextBtn" Content="Next" HorizontalAlignment="Left" Margin="209,648,0,0" VerticalAlignment="Top" Width="75" Click="NextBtn_Click"/>
        <Label  x:Name="CardNumberlabel_Copy" Content="Total Cards in Deck" HorizontalAlignment="Left" Margin="22,105,0,0" VerticalAlignment="Top" Width="111"/>
        <Button Button.Visibility="Hidden" x:Name="Savebutton" Content="Save changes" HorizontalAlignment="Left" Margin="111,648,0,0" VerticalAlignment="Top" Width="84" Click="Savebutton_Click" Height="20"/>
        <Button x:Name="button" Button.Visibility ="Hidden" Content="Add Image" HorizontalAlignment="Left" Margin="22,172,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
        <Label x:Name="FileNameLabel" Content="" HorizontalAlignment="Left" Margin="110,166,0,0" VerticalAlignment="Top" Width="271" />
        <Image x:Name="ImageViewer1" HorizontalAlignment="Left" Height="224" Margin="22,197,0,0" VerticalAlignment="Top" Width="359"/>
        <Button  x:Name="finish" Content="Finish" HorizontalAlignment="Left" Margin="165,690,0,0" VerticalAlignment="Top" Width="75" Click="finish_Click"/>
        <Label x:Name="CurrentCardLabel" Content="Current card number" HorizontalAlignment="Left" Margin="22,137,0,0" VerticalAlignment="Top" Width="122"/>
        <TextBox  IsReadOnly ="True" x:Name="CurrentCardTextbox" HorizontalAlignment="Left" Height="23" Margin="145,137,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="82" BorderThickness="0,0,0,1"/>

    </Grid>


</Page>
