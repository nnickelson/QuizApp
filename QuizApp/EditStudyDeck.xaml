<Page x:Class="QuizApp.EditStudyDeck"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QuizApp"
      mc:Ignorable="d" 
      d:DesignHeight="790" d:DesignWidth="400"
      Title="EditStudyDeck" Background="#FFFBF9F9">
    <Grid Background="#FFF3F2F2" Margin="0,-3,0,3">
        
        <!--Images-->
        <Image   x:Name="ImageViewer1"                          HorizontalAlignment="Left" Margin="22,197,0,0" VerticalAlignment="Top"   Height="224" Width="359"/>

        <!-- Textboxes-->
        <TextBox x:Name="TermtextBox"                          HorizontalAlignment="Left" Margin="31,438,0,0"   VerticalAlignment="Top"  Height="23"  Width="350"  BorderThickness="0,0,0,2" Opacity="0.8" TextBox.Visibility ="Hidden"/>
        <TextBox x:Name="DefinitiontextBox"                    HorizontalAlignment="Left" Margin="31,492,0,0"   VerticalAlignment="Top"  Height="130"  Width="350" Opacity="0.8" BorderThickness="0,0,0,2" VerticalScrollBarVisibility="Auto" TextBox.Visibility ="Hidden"/>
        <TextBox x:Name="currentlyEditing"                     HorizontalAlignment="Left" Margin="123,78,0,0"   VerticalAlignment="Top"  Height="20"   Width="258" BorderThickness="0,0,0,1" IsReadOnly ="True" />
        <TextBox x:Name="TotalCardstextBox"                    HorizontalAlignment="Left" Margin="145,105,0,0"  VerticalAlignment="Top"  Height="23"  Width="82" BorderThickness="0,0,0,1" IsReadOnly ="True" />
        <TextBox x:Name="CurrentCardTextbox"                   HorizontalAlignment="Left" Margin="145,137,0,0"  VerticalAlignment="Top"  Height="23"  Width="82" BorderThickness="0,0,0,1" IsReadOnly ="True" />

        <!-- Labels-->
        <Label  x:Name="Termlabel"                              HorizontalAlignment="Left" Margin="29,454,0,0"  VerticalAlignment="Top" Label.Visibility ="Hidden" >Term</Label>
        <Label  x:Name="Definitionlabel"                        HorizontalAlignment="Left" Margin="29,615,0,0"  VerticalAlignment="Top" Label.Visibility ="Hidden">Definition</Label>
        <Label  x:Name="label"                                  HorizontalAlignment="Left" Margin="22,78,0,0"   VerticalAlignment="Top">Currently editing</Label>
        <Label  x:Name="FileNameLabel"                          HorizontalAlignment="Left" Margin="110,166,0,0" VerticalAlignment="Top" Width="271"></Label>
        <Label  x:Name="CardNumberlabel_Copy"                   HorizontalAlignment="Left" Margin="22,105,0,0"  VerticalAlignment="Top"  Width="111">Total Cards in Deck</Label>
        <Label  x:Name="CurrentCardLabel"                       HorizontalAlignment="Left" Margin="22,137,0,0"  VerticalAlignment="Top"  Width="122">Current card number</Label>

        <!-- Buttons-->
        <Button x:Name="finish"                                 HorizontalAlignment="Left" Margin="165,690,0,0" VerticalAlignment="Top" Width="75"  Click="finish_Click">Finish</Button>
        <Button x:Name="SelectADeckbtn"                         HorizontalAlignment="Left" Margin="152,28,0,0"  VerticalAlignment="Top" Width="115" Click="SelectADeckbtn_Click">Select a deck to edit</Button>
        <Button x:Name="Deletebtn"   Button.Visibility="Hidden" HorizontalAlignment="Left" Margin="31,648,0,0"  VerticalAlignment="Top" Width="75"  Click="Deletebtn_Click">"Delete"</Button>
        <Button x:Name="Previousbtn" Button.Visibility="Hidden" HorizontalAlignment="Left" Margin="289,648,0,0" VerticalAlignment="Top" Width="75"  Click="Previousbtn_Click">Previous</Button>
        <Button x:Name="NextBtn"     Button.Visibility="Hidden" HorizontalAlignment="Left" Margin="209,648,0,0" VerticalAlignment="Top" Width="75"  Click="NextBtn_Click">Next</Button>
        <Button x:Name="Savebutton"  Button.Visibility="Hidden" HorizontalAlignment="Left" Margin="111,648,0,0" VerticalAlignment="Top" Width="84"  Click="Savebutton_Click" Height="20">Save Changes</Button>
        <Button x:Name="button"      Button.Visibility="Hidden" HorizontalAlignment="Left" Margin="22,172,0,0"  VerticalAlignment="Top" Width="75"  Click="button_Click">Add Image</Button>



    </Grid>


</Page>
