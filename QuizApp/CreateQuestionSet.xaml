<Page x:Class="QuizApp.CreateQuestionSet"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QuizApp"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="300"
      Title="CreateQuestionSet">

    <Grid Background="#FFECE6E6">
        <!-- Textboxes-->
        <TextBox x:Name="DeckTitletextBox" HorizontalAlignment="Left" Height="23" Margin="89,13,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="198" AutomationProperties.IsRequiredForForm="True" BorderThickness="0,0,0,1"/>
        <TextBox IsReadOnly ="True" x:Name="CardNumberLabeltextBox" HorizontalAlignment="Left" Height="23" Margin="89,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="31" BorderThickness="0,0,0,1"/>
        <TextBox x:Name="TermtextBox" HorizontalAlignment="Left" Height="130" Margin="19,72,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="271" AutomationProperties.IsRequiredForForm="True" BorderThickness="0,0,0,2" Opacity="0.8" AutomationProperties.HelpText="Enter Term here"/>
        <TextBox x:Name="DefinitiontextBox" HorizontalAlignment="Left" Height="87" Margin="16,252,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="271" Opacity="0.8" BorderThickness="0,0,0,2" AutomationProperties.HelpText="Enter the definintion here" AutomationProperties.IsRequiredForForm="True" VerticalScrollBarVisibility="Auto"/>

        <!-- Label-->
        <Label x:Name="Termlabel" Content="Question" HorizontalAlignment="Left" Margin="16,202,0,0" VerticalAlignment="Top"/>
        <Label x:Name="DeckTitleLabel" Content="Deck Title" HorizontalAlignment="Left" Margin="12,10,0,0" VerticalAlignment="Top" Width="72"/>
        <Label x:Name="Definitionlabel" Content="Answer" HorizontalAlignment="Left" Margin="16,339,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.123,-0.151"/>
        <Label x:Name="CardNumberlabel" Content="Question #" HorizontalAlignment="Left" Margin="12,41,0,0" VerticalAlignment="Top"/>

        <!-- Button-->
        <Button x:Name="AddQuestionToDeck" Content="Add" HorizontalAlignment="Left" Margin="60,370,0,0" VerticalAlignment="Top" Width="75"  BorderThickness="1" Click="AddQuestionToDeck_Click" />
        <Button x:Name="Finishedbutton" Content="Finished" HorizontalAlignment="Left" Margin="169,370,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="-0.059,0.532" />
    </Grid>
</Page>
